<!doctype html>
<html lang="en">
  <head>
    <title>Elimoo Admin</title>
    <link rel="shortcut icon" href="assets/img/elimoo_icon.png" type="image/x-icon">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="assets/css/login.css" rel="stylesheet" />

	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>

    </head>
    <body>  

      <div class="wrapper fadeInDown">
        <div id="formContent">
          <form method="POST">
            <input type="text" id="login" class="fadeIn second" name="username" placeholder="Username" style="margin-top: 24px;">
            <input type="password" id="password" class="fadeIn third" name="password" placeholder="Password">
            <% if (locals.login_result == 'failed') { %>
              <h6 style="font-weight: bold; color: red;">Incorrect Username or Password</h6>
            <% } %>
            <% if (locals.login_result == 'error') { %>
              <h6 style="font-weight: bold; color: red;">Something Went Wrong. Please Try Again</h6>
            <% } %>
            <input type="submit" class="fadeIn fourth grow" style="cursor: pointer" value="Log In">
          </form>
        </div>
      </div>

    </body>
  </html>